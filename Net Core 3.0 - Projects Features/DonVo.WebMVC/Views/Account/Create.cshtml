@model DonVo.ViewModels.CreateAccountViewModel
@{
    ViewData["Title"] = "Create";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h2>Add a user</h2>
                </div>
            </div>
            <hr>
            <form asp-action="Create">
                
                <div class="row">

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="FirstName" class="info-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="LastName" class="info-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-4 col-xl-4">
                        <label asp-for="Patronymic" class="info-label">Surname</label>
                        <input asp-for="Patronymic" class="form-control" />
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-lg-4 col-xl-6">
                        <label asp-for="Email" class="info-label">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group col-lg-4 col-xl-6">
                        <label asp-for="Role" class="info-label">Role</label>
                        <select asp-for="Role" asp-items="@ViewBag.Role" class="custom-select"></select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">

                    <div class="form-group col-md-6">
                        <label asp-for="Password" class="info-label">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="ConfirmPassword" class="info-label">Password Confirmation</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

                <div class="row justify-content-between">
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Return</a>
                        </div>
                    </div>

                    <div class="col-md-6 text-right">
                        <input type="submit" value="Add" class="btn btn-success btn-default"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@if (TempData["ErrorsList"] != null)
{
    await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
}