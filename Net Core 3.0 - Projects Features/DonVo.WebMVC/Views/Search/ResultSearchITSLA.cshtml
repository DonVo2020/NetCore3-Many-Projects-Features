@model IEnumerable<DonVo.ViewModels.DTOs.ResultSearchItslaDTO>
@{
    ViewData["Title"] = "ResultSearch";
}


<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="list_block container-fluid">

                <div class="row align-items-center">
                    <div class="col-lg-8 col-xl-9">
                        <h2 class="top">Search Result for ITSLA - @Model.Count()</h2>
                    </div>
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Return to Search</a>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th title="StoreName">Store Name</th>
                                <th title="MachineName">Machine Name</th>
                                <th title="OutageName">Outage Name</th>
                                <th title="OutageStartTime">Outage Start Time</th>
                                <th title="OutageEndTime">Outage End Time</th>
                                <th title="DownTime">Down Time</th>
                                <th title="ITSLADate">ITSLA Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{int counter = 1;}

                            @foreach (var m in Model)
                            {
                            <tr>
                                <td>@counter</td>
                                <td title="@m.StoreName">@m.StoreName</td>
                                <td title="@m.MachineName">@m.MachineName</td>
                                <td title="@m.OutageName">@m.OutageName</td>
                                <td>@m.OutageStartTime.ToString("MM/dd/yyyy")</td>
                                <td>@m.OutageEndTime.ToString("MM/dd/yyyy")</td>
                                <td>@m.DownTime</td>
                                <td>@m.DateKey.ToString("MM/dd/yyyy")</td>
                            </tr>
                                counter++;
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>