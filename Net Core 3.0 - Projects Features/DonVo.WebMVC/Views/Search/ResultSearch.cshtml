@model IEnumerable<DonVo.ViewModels.DTOs.ResultSearchInventoryDTO>
@{
    ViewData["Title"] = "ResultSearch";
}


<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="list_block container-fluid">

                <div class="row align-items-center">
                    <div class="col-lg-8 col-xl-9">
                        <h2 class="top">Search Result for Inventory - @Model.Count()</h2>
                    </div>
                    <div class="form-group col-lg-3">
                        <div>
                            <a asp-action="Index">Return to Search</a>
                        </div>
                    </div>
                </div>

                <div class="table-responsive">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th title="StoreName">Store Name</th>
                                <th title="ProductName">Product Name</th>
                                <th title="UnitCost">Unit Cost</th>
                                <th title="OnHandQuantity">On Hand Quantity</th>
                                <th title="OnOrderQuantity">On Order Quantity</th>
                                <th title="DaysInStock">Days In Stock</th>
                                <th title="InventoryDate">Inventory Date</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{int counter = 1;}

                            @foreach (var m in Model)
                            {
                            <tr>
                                <td>@counter</td>
                                <td title="@m.StoreName">@m.StoreName</td>
                                <td title="@m.ProductName">@m.ProductName</td>
                                <td>$@m.UnitCost</td>
                                <td>@m.OnHandQuantity</td>
                                <td>@m.OnOrderQuantity</td>
                                <td>@m.DaysInStock</td>
                                <td>@m.DateKey.ToString("MM/dd/yyyy")</td>
                            </tr>
                                counter++;
                            }
                        </tbody>
                    </table>

                </div>

            </div>
        </div>
    </div>
</section>