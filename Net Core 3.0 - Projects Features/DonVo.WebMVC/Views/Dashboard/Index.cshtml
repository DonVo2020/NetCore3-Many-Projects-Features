@{
    ViewData["Title"] = "Dashboard";
}


<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <h2 class="mt-3">Analytics</h2>
            <ul class="nav nav-pills mt-3 mb-3" id="pills-tab" role="tablist">

                <li class="nav-item">
                    <a class="nav-link active" id="pills-profile-tab1" data-toggle="pill" href="#pills-profile1" role="tab" aria-controls="pills-profile" aria-selected="true">Tab Pie Chart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab2" data-toggle="pill" href="#pills-profile2" role="tab" aria-controls="pills-profile" aria-selected="false">Tab Bar Chart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab3" data-toggle="pill" href="#pills-profile3" role="tab" aria-controls="pills-profile" aria-selected="false">Tab Area Chart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab4" data-toggle="pill" href="#pills-profile4" role="tab" aria-controls="pills-profile" aria-selected="false">Tab Radar Chart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab5" data-toggle="pill" href="#pills-profile5" role="tab" aria-controls="pills-profile" aria-selected="false">Tab Line Chart</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab6" data-toggle="pill" href="#pills-profile6" role="tab" aria-controls="pills-profile" aria-selected="false">Tab Bubble Chart</a>
                </li>
            </ul>
            <hr>
            <div class="tab-content" id="pills-tabContent">
                <!--Tab 1 start-->
                <div class="tab-pane fade show active" id="pills-profile1" role="tabpanel" aria-labelledby="pills-profile-tab1">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Pie Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="myPieChart" width="100" height="48"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 1 end-->
                <!--Tab 2 start-->
                <div class="tab-pane fade" id="pills-profile2" role="tabpanel" aria-labelledby="pills-profile-tab2">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Bar Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="myBarChart" width="100%" height="50"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 2 end-->
                <!--Tab 3 start-->
                <div class="tab-pane fade" id="pills-profile3" role="tabpanel" aria-labelledby="pills-profile-tab3">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Area Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="myAreaChart" width="100%" height="30"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 3 end-->
                <!--Tab 4 start-->
                <div class="tab-pane fade" id="pills-profile4" role="tabpanel" aria-labelledby="pills-profile-tab4">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Radar Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="radarChart"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 4 end-->
                <!--Tab 5 start-->
                <div class="tab-pane fade" id="pills-profile5" role="tabpanel" aria-labelledby="pills-profile-tab5">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Line Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="lineChart"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 5 end-->
                <!--Tab 6 start-->
                <div class="tab-pane fade" id="pills-profile6" role="tabpanel" aria-labelledby="pills-profile-tab6">
                    <div class="row">

                        <div class="col-lg-12">
                            <div class="card mb-3">
                                <div class="card-header">
                                    Bubble Chart
                                </div>
                                <div class="card-body">
                                    <canvas id="bubbleChart"></canvas>
                                </div>
                                <div class="card-footer small text-muted">Updated Just Now - @DateTime.Now.ToString("MM/dd/yyyy hh:mm:ss")</div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--Tab 6 end-->


            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <environment include="Development">
        <script src="~/lib/chart.js/Chart.min.js"></script>
        <script src="~/lib/codepen/colour.palette.generator.js"></script>
        <script src="~/js/dashboard/chart-pie-demo.js"></script>
        <script src="~/js/dashboard/chart-bar-demo.js"></script>
        <script src="~/js/dashboard/chart-area-demo.js"></script>
        <script src="~/js/dashboard/chart-radar-demo.js"></script>
        <script src="~/js/dashboard/chart-line-demo.js"></script>
        <script src="~/js/dashboard/chart-bubble-demo.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/lib/chart.js/Chart.min.js" asp-append-version="true"></script>
        <script src="~/lib/codepen/colour.palette.generator.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-pie-demo.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-bar-demo.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-area-demo.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-radar-demo.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-line-demo.js" asp-append-version="true"></script>
        <script src="~/js/dashboard/chart-bubble-demo.js" asp-append-version="true"></script>
    </environment>
}