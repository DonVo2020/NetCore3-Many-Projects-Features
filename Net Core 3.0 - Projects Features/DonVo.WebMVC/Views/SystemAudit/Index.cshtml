@model IEnumerable<DonVo.ViewModels.DTOs.SystemAuditDTO>
@{
    ViewData["Title"] = "Index";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Audit Log Users</h1>
                </div>
            </div>
            <hr>
            <form asp-action="Filter">
                <div class="row">
                    <div class="form-group col-lg-4 col-xl-3">
                        <label>Email</label>
                        <select asp-items="@ViewBag.Emails" name="email" class="custom-select" required=""></select>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-xl-3">
                        <label>Start Date</label>
                        <input type="date" value="" name="startDate" class="form-control" required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-xl-3">
                        <label>End Date</label>
                        <input type="date" value="" name="endDate" class="form-control" required="">
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group col-lg-4 col-xl-3">
                        <label>&nbsp;</label>
                        <input type="submit" value="Find" class="btn btn-success btn-default form-control" />
                    </div>
                </div>

            </form>

            @if (@Model != null)
            {
                <hr>
                <div class="row main-block">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Date and Time
                                </th>
                                <th>
                                    Operation
                                </th>
                                <th>
                                    Table
                                </th>
                                <th>
                                    Column
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @item.EmailUser
                                </td>
                                <td>
                                    @item.CreatedOn
                                </td>
                                <td>
                                    @item.OperationName
                                </td>
                                <td>
                                    @item.TableName
                                </td>
                                <td>
                                    @item.ColumnName
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</section>