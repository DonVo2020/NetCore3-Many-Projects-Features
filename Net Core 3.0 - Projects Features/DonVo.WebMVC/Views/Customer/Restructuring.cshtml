@model DonVo.ViewModels.RestructuringViewModel
@{
    ViewData["Title"] = "Restructuring";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">

            <div class="row align-items-center mt-3">
                <div class="col-md-10">
                    <h1>Restructuring</h1>
                </div>
            </div>
            <hr>
            @if (TempData["ErrorsList"] == null)
            {
                <form asp-action="Restructuring">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-lg-4 col-xl-6">
                            <select asp-for="HashIdCustomer" class="form-control" asp-items="ViewBag.CustomerCustomer"></select>
                        </div>
                        <div class="form-group col-lg-4 col-xl-6">
                            <select asp-for="HashIdMain" class="form-control" asp-items="ViewBag.MainCustomer"></select>
                        </div>
                    </div>
                    <div class="row justify-content-between">
                        <div class="form-group col-lg-3">
                            <div>
                                <a asp-action="Index">Return</a>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <input type="submit" value="Restructure" class="btn btn-success btn-default" />
                        </div>
                    </div>
                </form>
            }
            else
            {
                await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
            }
        </div>
    </div>
</section>

@if (TempData["ErrorsListConfirmed"] != null)
{
    await Html.RenderPartialAsync("_Errors", TempData["ErrorsListConfirmed"]);
}