@model IEnumerable<DonVo.ViewModels.DTOs.Directories.ProductDTO>
@{
    ViewData["Title"] = "Index";
}

<section class="add-user container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 add-user_block">
            <div class="row">
                <a asp-controller="Home" asp-action="Directory" class="back-link">Return</a>
                <hr />
                @*<div class="form-group">
                    <a asp-action="Create" class="btn btn-success">Add Accounting</a>
                </div>*@
            </div>
            <div class="row main-block">
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Product Name
                            </th>
                            <th>
                                Product Description
                            </th>
                            <th>
                                Manufacturer
                            </th>
                            <th>
                                Unit Cost
                            </th>
                            <th>
                                Unit Price
                            </th>
                            <th>
                                Brand Name
                            </th>
                            <th>
                                Product Label
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (TempData["ErrorsList"] == null)
                        {
                            foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.ProductDescription
                            </td>
                            <td>
                                @item.Manufacturer
                            </td>
                            <td>
                                @item.UnitCost
                            </td>
                            <td>
                                @item.UnitPrice
                            </td>
                            <td>
                                @item.BrandName
                            </td>
                            <td>
                                @item.ProductLabel
                            </td>

                        </tr>
                            }
                        }
                        else
                        {
                            await Html.RenderPartialAsync("_Errors", TempData["ErrorsList"]);
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>


@if (User.IsInRole("Admin"))
{
    @section Scripts
    {
        <environment include="Development">
            <script src="~/js/delete.js"></script>
        </environment>

        <environment exclude="Development">
            <script src="~/js/delete.min.js" asp-append-version="true"></script>
        </environment>
    }
}